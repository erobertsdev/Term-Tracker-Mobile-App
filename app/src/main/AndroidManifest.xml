        <activity
            android:name="dev.eroberts.term_tracker.Terms_Add_Activity"
            android:label="@string/title_activity_terms_add"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="dev.eroberts.term_tracker.Courses_Details_Activity"
            android:label="@string/title_activity_courses_details"
